                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Button 3"
                android:textSize="20sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Button 4"
                android:textSize="20sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Button 5"
                android:textSize="20sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Button 6"
                android:textSize="20sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Button 7"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>